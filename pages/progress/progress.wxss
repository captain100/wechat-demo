.wrapper {
    position: relative;
    margin: 50rpx 30rpx;

}

.progress-box {
    /*margin: 50rpx 30rpx;*/
    border-radius: 30rpx;
    overflow: hidden;
}

.movable-wrapper {  
    position: absolute;
    top: -10rpx;
    right:0;
    left: 0;
    bottom: -10rpx;
    width:100%;
    height: 60rpx;
    background:rgba(0,0,0,0);
}

.movable-bar {
    z-index: 9;
    display: block;
    width: 40rpx;
    height: 60rpx;
    border: 2rpx solid #ccc;
    border-radius: 10rpx;
    background: #eee ;
    box-shadow: 0 0 20rpx #ccc;
}
