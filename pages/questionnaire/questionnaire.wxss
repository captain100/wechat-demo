.wrapper {
    margin: 10rpx 15rpx;
    background: #fff;
    color: #5e5e5e;
}

.wrapper .header {
    font-family: sans-serif;
    font-size: 40rpx;
    text-indent:60rpx;
    line-height: 48rpx;
}

.wrapper .header text {
    font-style: italic;
    font-weight: 900;
    color: #5d5d5d;
    
}
.context {
    margin: 20rpx 0;
}
.question {
    display: block;
    font-weight: 900;
    text-indent: 10rpx;
    line-height: 50rpx;
    margin-bottom: 20rpx;
}
.question-tiems {
    padding: 10rpx 0 10rpx 30rpx ;
    box-shadow: 0 0 10rpx #CCC; 
    position: relative;
}
.padding-left-color {
    top: 15rpx;
    left: 0;
    width:18rpx;
    bottom: 15rpx;
    position: absolute;
}
.radio {
    display: flex;
    line-height: 50rpx;
    flex-direction: row-reverse;
    justify-content: space-between;    
}
