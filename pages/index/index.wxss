/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.apps-wrapper {
  padding: 20rpx;
}

.apps-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin:0 0 20rpx 0;
}

.app-icon {
  width:25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.app-icon .app-text {
  width: 155rpx;
  height: 155rpx;
  display: block;
  background: #fff;
  box-shadow: 0 0 16rpx #CCC;
  text-align: center;
  line-height: 155rpx;
  font-size: 50rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

